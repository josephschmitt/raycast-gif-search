{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "gif-search",
  "title": "gif-search",
  "description": "Search for animated gifs",
  "icon": "command-icon.png",
  "author": "josephschmitt",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Gif Search",
      "description": "Search for an animated gif",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "apiKey",
      "type": "textfield",
      "required": true,
      "title": "Giphy API Key",
      "placeholder": "Giphy API Key",
      "description": "API Key used to perform searches on Giphy. You can get one for free at https://developers.giphy.com"
    }
  ],
  "dependencies": {
    "@giphy/js-fetch-api": "^4.1.2",
    "@raycast/api": "^1.29.1",
    "gif-frames": "^1.0.1",
    "node-fetch": "^3.2.1",
    "usehooks-ts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.19.2",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
